<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 

 <mapper namespace="com.gentleflo.complimentSticker.post.comment.dao.CommentDAO">
 	<insert id="insertComment" parameterType="map">
 		INSERT INTO
 			`comment`
 		(
 			`userId`
 			, `loginId`
 			, `complimentListId`
 			, `comment`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{userId }
 			, #{loginId }
 			, #{complimentListId }
 			, #{comment }
 			, now()
 			, now()
 		)
 	</insert>
 	
 	
 	<select id="selectCommentByComplimentListId" resultType="com.gentleflo.complimentSticker.post.comment.model.Comment">
 		SELECT 
 			`id`
 			, `userId`
 			, `loginId`
 			, `complimentListId`
 			, `comment`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`comment`
 		WHERE 
 			`complimentListId` = #{complimentListId }
 		ORDER BY 
 			`id` DESC
 	</select>
 </mapper>