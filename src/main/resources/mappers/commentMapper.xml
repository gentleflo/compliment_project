<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 

 <mapper namespace="com.gentleflo.complimentSticker.post.comment.model.Comment">
 	<insert id="insertComment" parameterType="map">
 		INSERT INTO
 			`comment`
 		(
 			`userId`
 			, `loginId`
 			, `postId`
 			, `complimentListId`
 			, `comment`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{userId }
 			, #{loginId }
 			, #{postId }
 			, #{complimentListId }
 			, #{comment }
 			, now()
 			, now()
 		)
 		
 	</insert>
 </mapper>